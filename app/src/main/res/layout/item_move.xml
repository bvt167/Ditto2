<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/ccContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMove"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Move Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMoveCategory"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:text="CATEGORY"
            android:gravity="right" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TYPE"
            android:textColor="@color/white"
            android:background="@drawable/item_type" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/tvMoveFlavorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="Description"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLevelLearnedLabel"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Level:"/>

        <TextView
            android:id="@+id/tvLevelLearned"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/tvPowerLabel"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Power:"/>

        <TextView
            android:id="@+id/tvPower"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/tvAccuracyLabel"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Accuracy:"/>

        <TextView
            android:id="@+id/tvAccuracy"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/tvPPLabel"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PP:"/>

        <TextView
            android:id="@+id/tvPP"
            android:layout_width="@dimen/default_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="0"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>